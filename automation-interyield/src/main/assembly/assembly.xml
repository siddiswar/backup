<assembly>
	<id></id>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>		
		<fileSet>
			<directory>${project.build.directory}/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/bin</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/logs</directory>
			<outputDirectory>logs</outputDirectory>
		</fileSet>	
		<fileSet>
		    <directory>${project.basedir}/inputdata</directory>	
			<outputDirectory>inputdata</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/outputdata</directory>				
			<outputDirectory>outputdata</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/lib</outputDirectory>			
		</dependencySet>
	</dependencySets>
</assembly>